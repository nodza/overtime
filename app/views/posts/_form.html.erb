<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, :image => :error, :title => "Something went wrong!", :sticky => false) %>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :date, class: "col-form-label col-form-label-lg" %> <br>
    <%= f.date_field :date, class: "form-control form-control-lg", id: "formDateInput"  %>
  </div>
  <div class="form-group">
    <%= f.label :rationale, class: "col-form-label col-form-label-lg" %> <br>
    <%= f.text_area :rationale, class: "form-control form-control-lg", id: "formRationaleInput"  %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-lg btn-block btn-success" %>
  </div>
<% end %>