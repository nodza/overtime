<div class="row justify-content-md-center">
  <div class="col-md-6">
  <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "col-form-label col-form-label-lg" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-form-label col-form-label-lg" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-lg" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-lg btn-info" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</div>
